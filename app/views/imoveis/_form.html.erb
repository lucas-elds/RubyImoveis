  </div>

  <div>
    <%= form.label :tamanho, "Tamanho", style: "display: block" %>
    <%= form.text_field :tamanho %>
  </div>

  <div>
    <%= form.label :n_quartos, "Quartos", style: "display: block" %>
    <%= form.number_field :n_quartos %>
  </div>

  <div>
    <%= form.label :n_banheiros, "Banheiros", style: "display: block" %>
    <%= form.number_field :n_banheiros %>
  </div>

  <div>
    <%= form.label :rua, style: "display: block" %>
    <%= form.text_field :rua %>
  </div>

  <div>
    <%= form.label :numero, "Número", style: "display: block" %>
    <%= form.text_field :numero %>
  </div>

  <div>
    <%= form.label :cidade, style: "display: block" %>
    <%= form.text_field :cidade %>
  </div>

  <div>
    <%= form.label :bairro, style: "display: block" %>
